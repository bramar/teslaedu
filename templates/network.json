{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tEduCommon": {
            "type": "object"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "name": "vNetTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "tEduCommon": {
                        "value": "[parameters('tEduCommon')]"
                    }
                },
                "templateLink": {
                    "uri": "[concat(parameters('tEduCommon').baseTemplateUrl,'network-vnet.json')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2017-05-10",
            "dependsOn": [
                "Microsoft.Resources/deployments/vNetTemplate"
            ],
            "name": "subnetTemplate",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "tEduCommon": { "value": "[parameters('tEduCommon')]" },
                    "subnetName": { "value": "[concat(parameters('tEduCommon').vnetName, '/subnet')]" }
                },
                "templateLink": {
                    "uri": "[concat(parameters('tEduCommon').baseTemplateUrl, 'network-subnets.json')]"
                }
            }
        }
    ]
}
