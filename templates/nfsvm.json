{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "tEduCommon": {
            "type": "object"
        },
        "publicIpId": {
            "type": "string"
        },
        "subnetId": {
            "type": "string"
        },
        "nfsStaticIP": {
            "type": "string"
        }
    },
    "variables": {
        "commandToExecute": "bash -x installnfs.sh",
        "nfsScriptUrl": "[concat(parameters('tEduCommon')._rootArtifactLocation, 'scripts/installnfs.sh')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2017-10-01",
            "name": "nfsNic",
            "location": "[parameters('tEduCommon').location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('nfsStaticIP')]",
                            "subnet": {
                                "id": "[parameters('subnetId')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-12-01",
            "name": "teslaEduNFS",
            "location": "[parameters('tEduCommon').location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', 'nfsNic')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D1_v2"
                },
                "osProfile": {
                    "computerName": "tEduNFS",
                    "adminPassword": "[parameters('tEduCommon').adminPassword]",
                    "adminUsername": "[parameters('tEduCommon').adminUsername]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "16.04.0-LTS",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "diskSizeGB": 40
                    },
                    "dataDisks": [
                        {
                            "diskSizeGB": "[parameters('tEduCommon').nfsDiskSize]",
                            "lun": 0,
                            "createOption": "Empty"
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', 'nfsNic')]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "installnfsserver",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', 'teslaEduNFS')]"
                    ],
                    "apiVersion": "2017-12-01",
                    "location": "[parameters('tEduCommon').location]",
                    "properties": {
                        "settings": {
                            "fileUris": [
                                "[variables('nfsScriptUrl')]"
                            ]
                        },
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0",
                        "autoUpgradeMinorVersion": true,
                        "protectedSettings": {
                            "commandToExecute": "[variables('commandToExecute')]"
                        }
                    }
                }
            ]
        }        
    ]
}